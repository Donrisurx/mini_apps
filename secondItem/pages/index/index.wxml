<!--index.wxml-->
<swiper indicator-dots="true" autoplay="true" circular="true" indicator-color="white" indicator-active-color="skyblue">
  <block wx:for="{{hot}}">
    <swiper-item>
      <image bindtap='toast' src="{{item.pic}}"/>
    </swiper-item>
  </block>
</swiper>

<block wx:for="{{hot}}"> 
  <view class="recommend" bindtap='toast'>
    <view class="picture">
      <image mode="widthFix" src="{{item.pic}}"/>
    </view>
    <view class="info">
      <text>漫画：《{{item.name}}{{item.id}}》</text>
      <text>作者：{{item.author}}</text>
      <text>类型：{{item.tag}}</text>
      <text>人气：{{item.hot}}</text>
    </view>
    <view class="enter">进入>></view>
  </view>
</block> 
